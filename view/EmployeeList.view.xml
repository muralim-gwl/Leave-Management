<mvc:View controllerName="sap.ui.demo.wt.controller.EmployeeList" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" class="viewPadding">
	<App>
		<pages>
			<Page id="oPage" title="Employee List" class="marginBoxContent">
				<content>
					<Table id="idProductsTable" items="{path:'employee>/Employees'}">
						<columns>
							<Column>
								<Label text="Id"/>
							</Column>
							<Column>
								<Label text="Name"/>
							</Column>
							<Column>
								<Label text="Total"/>
							</Column>
							<Column>
								<Label text="Balance"/>
							</Column>
							<Column>
								<Label text="Action"/>
							</Column>
						</columns>
						<items >
							<ColumnListItem>
								<cells>
									<Text text="{employee>/id}"/>
									<Text text="{employee>/name}"/>
									<!-- <Text text="{employee>/total_plan_leaves + employee>/total_sick_leaves}" -->
									<core:Icon src="sap-icon://add" press="onAdd"/>
									<core:Icon src="sap-icon://delete" press="onDelete"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>
